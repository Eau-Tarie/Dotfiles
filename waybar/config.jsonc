       "hyprland/windowcount"
    ],
    "modules-right": [
        "mpd",
	"network",
	"group/hardware",
        //"power-profiles-daemon",
        "backlight",
	"group/power",
        "keyboard-state",
        "tray",
	"group/time"
    ],
